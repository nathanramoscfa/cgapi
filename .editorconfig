# .editorconfig

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,html,css,md}]
charset = utf-8

# 4 space indentation
[*.{py,html,css,md}]
indent_style = space
indent_size = 4

# 2 space indentation (JavaScript)
[*.js]
indent_style = space
indent_size = 2

# Tab indentation (Python), no trailing whitespace
[*.py]
indent_style = tab
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
